{% extends 'base.html.twig' %}
{% trans_default_domain "product" %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('build/file-upload.css') }}" />
    <link rel="stylesheet" href="{{ asset('build/forms.css') }}">
{% endblock %}

{% block body %}

    <div class="col-lg-4">
        <p class="form-header">{{ 'product'|trans|raw }}</p>

        {{ form_start(form, {'attr': {'class': 'form'} }) }}

            <div class="form-group">
                {{ form_widget(form.category) }}

                <div class="text-danger">
                    {{ form_errors(form.name) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_widget(form.name) }}

                <div class="text-danger">
                    {{ form_errors(form.name) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_widget(form.price) }}

                <div class="text-danger">
                    {{ form_errors(form.price) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_widget(form.description) }}

                <div class="text-danger">
                    {{ form_errors(form.description) }}
                </div>
            </div>

            {{ form_label(form.uploadedFiles) }}

            <div id="list">
                {% if form.uploadedFiles.parent.vars.value.files is empty %}
                    <img class="product-image" src="{{ asset('img/undefined.jpg') }}" >
                {% else %}
                    {% for imgs in form.uploadedFiles.parent.vars.value.files %}
                        <div class="list__image-container">
                            <img class="product-image" src="{{ asset(imgs) }}" >
                            <a class="list__image-container_delete-link img-circle">
                                <span class="glyphicon glyphicon-remove text-danger"></span>
                            </a>
                        </div>
                    {% endfor %}
                {% endif %}
            </div>

            {% include ':common:upload-input.html.twig' %}

            <input type="submit" class="btn" value="{{ 'table.product.save'|trans|raw }}">

        {{ form_end(form) }}
    </div>

{% endblock %}

{% block javascripts %}
    <script src="{{ asset('build/multi-preview.js') }}"></script>
{% endblock %}