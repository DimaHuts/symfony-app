<div id="myCarouse{{ index }}" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        {% for imgs in product.files %}
            <div class="item {{ loop.index is same as(1) ? 'active' : '' }}">
                <img class="product-image" src="{{ asset(imgs) }}">
            </div>
        {% endfor %}
    </div>

    <a class="left carousel-control" href="#myCarouse{{ index }}" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarouse{{ index }}" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>