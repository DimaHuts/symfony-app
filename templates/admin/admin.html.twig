{% extends 'base.html.twig' %}

{% block title %}
    Admin
{% endblock %}

{% block body %}

    <table class="table table-striped table-hover table-products">

        <thead>
            <tr>
                <th class="text-center">{{ 'table.product.category'|trans }}</th>
                <th class="text-center">{{ 'table.product.actions'|trans }}</th>
            </tr>
        </thead>

        <tbody>
        {% for category in categories %}
            <tr>
                <td class="align-middle text-center">{{ category.getCategoryName() }}</td>

                <td class="align-middle text-center">
                    <a href="{{ path('category-edit', {'id': category.getId()}) }}">
                        <span class="glyphicon glyphicon-pencil"></span>
                    </a>
                    <a href="{{ path('category-add') }}">
                        <span class="glyphicon glyphicon-plus"></span>
                    </a>
                    <form class="table-products__delete-form" action="{{ path('category-delete', {'id': category.getId()}) }}" method="post">
                        <button type="submit">
                            <span class="glyphicon glyphicon-remove text-danger"></span>
                        </button>
                    </form>
                </td>
            </tr>
        {% endfor %}
        </tbody>

    </table>

{% endblock %}