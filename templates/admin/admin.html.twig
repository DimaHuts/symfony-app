{% extends 'base.html.twig' %}

{% block title %}
    Admin
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('build/css/admin.css') }}" />
{% endblock %}

{% block body %}

    <table class="table table-striped table-hover table-products">

        <thead>
            <tr>
                <th class="text-center">{{ 'table.product.category'|trans }}</th>
                <th class="text-center">{{ 'table.product.actions'|trans }}</th>
            </tr>
        </thead>

        <tbody>
        {% for category in categories %}
            <tr>
                <td class="align-middle text-center">{{ category.getCategoryName() }}</td>

                <td class="align-middle text-center">
                    {% include 'common/edit-link.html.twig' with {'path': path('category-edit', {'id': category.getId()})} %}
                    {% include 'common/delete-form.html.twig' with {'path': path('category-delete', {'id': category.getId()})} %}
                    {% include 'common/add-link.html.twig' with {'path': path('category-add')} %}
                </td>
            </tr>
        {% endfor %}
        </tbody>

    </table>

{% endblock %}