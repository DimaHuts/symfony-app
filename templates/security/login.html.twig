{% extends 'base.html.twig' %}

{% block main %}

    <div class="col-lg-4">

        <p class="form-header">
            {{ 'title.login'|trans }}
        </p>

        {% if error %}
            <div class="alert alert-danger">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}


        <form action="{{ path('security_login') }}" method="post" class="form">

            <div class="form-group">
                <input type="text" placeholder="{{ 'label.username'|trans }}" name="username" class="form-control" />
            </div>

            <div class="form-group">
                <input type="password" placeholder="{{ 'label.password'|trans }}" name="_password" class="form-control" />
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>

            <button type="submit" class="btn btn-primary">
                {{ 'title.login'|trans }}
            </button>

        </form>

    </div>

{% endblock %}
