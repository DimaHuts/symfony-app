{% extends 'form.html.twig' %}

{% block title %}
    Login
{% endblock %}

{% block form_header_content %}
    {{ 'title.login'|trans }}
{% endblock %}

{% block form %}
    
    <form action="{{ path('security_login') }}" method="post" class="form">
        
        {% if error %}
            <div class="alert alert-danger">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}

        <div class="form-group">
            <input type="text" placeholder="{{ 'title.username'|trans }}" name="username" class="form-control" />
        </div>

        <div class="form-group">
            <input type="password" placeholder="{{ 'title.password'|trans }}" name="_password" class="form-control" />
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>

        <button type="submit" class="">
            {{ 'title.login'|trans }}
        </button>

    </form>
            
{% endblock %}

